<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
			 xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
			 android:layout_width="match_parent"
			 android:layout_height="wrap_content" android:id="@+id/frameLayout">

	<androidx.cardview.widget.CardView
			android:layout_width="match_parent"
			android:layout_height="wrap_content" android:id="@+id/card_view" app:cardElevation="4dp"
			app:contentPadding="16dp" app:cardCornerRadius="4dp" app:cardUseCompatPadding="true"
			android:foreground="?attr/selectableItemBackgroundBorderless">
		<androidx.constraintlayout.widget.ConstraintLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
			<ImageView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" app:srcCompat="@drawable/ic_assignment_black_24dp"
					android:id="@+id/imageView4" android:layout_marginBottom="8dp"
					app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
					app:layout_constraintTop_toTopOf="parent"
					android:tint="@color/app_orange"
					app:layout_constraintStart_toStartOf="parent"/>
			<TextView
					android:text="TextView"
					android:layout_width="0dp"
					android:layout_height="wrap_content" android:id="@+id/text_course"
					app:layout_constraintEnd_toEndOf="parent"
					android:textAppearance="@style/CourseTitle"
					app:layout_constraintTop_toTopOf="parent" android:textSize="18sp"
					app:layout_constraintStart_toEndOf="@+id/imageView4" android:layout_marginStart="8dp"
			/>
			<TextView
					android:text="TextView"
					android:layout_width="0dp"
					android:layout_height="wrap_content" android:id="@+id/text_title"
					app:layout_constraintTop_toBottomOf="@+id/text_course"
					app:layout_constraintEnd_toEndOf="@+id/text_course"
					app:layout_constraintStart_toStartOf="@+id/text_course"
					android:textAppearance="@android:style/TextAppearance.Material.Medium"/>
		</androidx.constraintlayout.widget.ConstraintLayout>
	</androidx.cardview.widget.CardView>
</FrameLayout>