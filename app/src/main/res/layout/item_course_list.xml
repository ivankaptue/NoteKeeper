<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
			 xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
			 android:layout_width="match_parent"
			 android:layout_height="wrap_content">

	<androidx.cardview.widget.CardView
			android:layout_width="match_parent"
			android:layout_height="wrap_content" android:id="@+id/card_view" app:cardElevation="4dp"
			app:contentPadding="16dp" app:cardCornerRadius="4dp" app:cardUseCompatPadding="true"
			android:foreground="?attr/selectableItemBackgroundBorderless">
		<androidx.constraintlayout.widget.ConstraintLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content">
			<TextView
					android:text="TextView"
					android:layout_width="0dp"
					android:layout_height="wrap_content" android:id="@+id/text_course"
					app:layout_constraintEnd_toEndOf="parent"
					app:layout_constraintStart_toStartOf="parent"
					android:textAppearance="@style/CourseTitle"
					app:layout_constraintTop_toTopOf="parent" android:textSize="18sp" android:textAlignment="center"/>
			<ImageView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" app:srcCompat="@drawable/ic_menu_slideshow"
					android:id="@+id/imageView2"
					android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/text_course"
					app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
					app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
					android:tint="@color/app_orange"/>
		</androidx.constraintlayout.widget.ConstraintLayout>
	</androidx.cardview.widget.CardView>
</FrameLayout>